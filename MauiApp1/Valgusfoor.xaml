<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Valgusfoor"
             Title="Valgusfoor">

    <Grid RowDefinitions="Auto,*,Auto,Auto" ColumnDefinitions="*,Auto">

        <!-- Заголовок и часы -->
        <VerticalStackLayout Grid.Row="0" Grid.Column="0" Padding="10" Spacing="5">
            <Label x:Name="ClockLabel"
                   Text="--:--:--"
                   FontSize="22"
                   TextColor="Black"
                   HorizontalOptions="Start"/>
            <Label x:Name="HeaderLabel"
                   Text="Светофор выключен"
                   FontSize="20"
                   TextColor="DarkBlue"
                   HorizontalOptions="Start"/>
        </VerticalStackLayout>

        <!-- Картинка справа -->
        <Image Source="bg.jpg"
               Grid.Row="0" Grid.Column="1"
               WidthRequest="100"
               HeightRequest="100"
               Aspect="AspectFit"
               HorizontalOptions="End"
               VerticalOptions="Start"/>

        <!-- Светофор по центру -->
        <VerticalStackLayout Grid.Row="1" Grid.ColumnSpan="2" Spacing="15" HorizontalOptions="Center">

            <Frame x:Name="RedCircle"
                   WidthRequest="120" HeightRequest="120"
                   CornerRadius="100"
                   BackgroundColor="Gray"
                   BorderColor="Transparent"
                   HorizontalOptions="Center">
                <Grid>
                    <Label Text="Красный" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Label x:Name="RedCountdown" Text="" FontAttributes="Bold"
                           HorizontalOptions="Center" VerticalOptions="End"/>
                </Grid>
            </Frame>

            <Frame x:Name="YellowCircle"
                   WidthRequest="120" HeightRequest="120"
                   CornerRadius="100"
                   BackgroundColor="Gray"
                   BorderColor="Transparent"
                   HorizontalOptions="Center">
                <Grid>
                    <Label Text="Жёлтый" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Label x:Name="YellowCountdown" Text="" FontAttributes="Bold"
                           HorizontalOptions="Center" VerticalOptions="End"/>
                </Grid>
            </Frame>

            <Frame x:Name="GreenCircle"
                   WidthRequest="120" HeightRequest="120"
                   CornerRadius="100"
                   BackgroundColor="Gray"
                   BorderColor="Transparent"
                   HorizontalOptions="Center">
                <Grid>
                    <Label Text="Зелёный" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Label x:Name="GreenCountdown" Text="" FontAttributes="Bold"
                           HorizontalOptions="Center" VerticalOptions="End"/>
                </Grid>
            </Frame>

        </VerticalStackLayout>

        <!-- Кнопки включить/выключить -->
        <HorizontalStackLayout Grid.Row="2" Grid.ColumnSpan="2" HorizontalOptions="Center" Spacing="20" Margin="0,20,0,0">
            <Button Text="Включить" Clicked="OnSisseClicked"/>
            <Button Text="Выключить" Clicked="OnValjaClicked"/>
        </HorizontalStackLayout>

        <!-- Переключатель День/Ночь -->
        <HorizontalStackLayout Grid.Row="3" Grid.ColumnSpan="2" HorizontalOptions="Center" Spacing="10" Margin="0,10,0,20">
            <Label Text="День"/>
            <Switch x:Name="NightSwitch" Toggled="OnNightToggled"/>
            <Label Text="Ночь"/>
        </HorizontalStackLayout>

    </Grid>
</ContentPage>
