<?xml version="1.0" encoding="utf-8" ?>
<!--
  Страница Snowman (визуал).
  Важное соответствие: x:Class = MauiApp1.Snowman — именно такой класс в Snowman.xaml.cs.
-->
<ContentPage
    x:Class="MauiApp1.Snowman"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Снеговик">

    <!-- Корневой AbsoluteLayout: даёт точное позиционирование всех слоёв -->
    <AbsoluteLayout>

        <!-- 1) ФОН: картинка на весь экран -->
        <Image Source="snowbg.jpg"
               Aspect="AspectFill"
               AbsoluteLayout.LayoutBounds="0,0,1,1"
               AbsoluteLayout.LayoutFlags="All" />

        <!-- 2) СНЕГ: прозрачный слой поверх фона, под снеговиком и панелью.
               Сюда динамически добавляем снежинки из кода. -->
        <AbsoluteLayout x:Name="SnowOverlay"
                        InputTransparent="True"
                        AbsoluteLayout.LayoutBounds="0,0,1,1"
                        AbsoluteLayout.LayoutFlags="All" />

        <!-- 3) СНЕГОВИК (контейнер). Меняем Opacity/Scale/Translate у него целиком. -->
        <AbsoluteLayout x:Name="SnowmanContainer"
                        Opacity="1"
                        AbsoluteLayout.LayoutBounds="0.5,0.42,0.74,0.64"
                        AbsoluteLayout.LayoutFlags="All">

            <!-- = Ведро = (группа из 3 элементов): корпус + поля + ручка.
                 Делаем из Grid и наклоняем всю группу лёгким поворотом. -->
            <Grid AbsoluteLayout.LayoutBounds="0.54,0.08,0.28,0.14"
                  AbsoluteLayout.LayoutFlags="All"
                  Rotation="-12">
                <!-- ручка (узкая полоска) -->
                <Frame BackgroundColor="#5C3B21"
                       CornerRadius="3"
                       HasShadow="False"
                       HeightRequest="6"
                       VerticalOptions="Start"
                       Margin="18,2,18,0"/>
                <!-- корпус -->
                <Frame x:Name="BucketBody"
                       BackgroundColor="#7A4A22"
                       CornerRadius="8"
                       HasShadow="False"
                       Margin="0,8,0,10"/>
                <!-- поля (ободок) -->
                <Frame x:Name="BucketBrim"
                       BackgroundColor="#603A1C"
                       CornerRadius="4"
                       HasShadow="False"
                       HeightRequest="10"
                       VerticalOptions="End"/>
            </Grid>

            <!-- Голова (круг) -->
            <Frame x:Name="Head"
                   BackgroundColor="#FFFFFF"
                   BorderColor="#B0C4DE"
                   CornerRadius="999"
                   HasShadow="False"
                   AbsoluteLayout.LayoutBounds="0.50,0.28,0.30,0.30"
                   AbsoluteLayout.LayoutFlags="All" />

            <!-- Глаза -->
            <Frame CornerRadius="999" HasShadow="False" BackgroundColor="#222"
                   AbsoluteLayout.LayoutBounds="0.455,0.25,0.03,0.03"
                   AbsoluteLayout.LayoutFlags="All" />
            <Frame CornerRadius="999" HasShadow="False" BackgroundColor="#222"
                   AbsoluteLayout.LayoutBounds="0.545,0.25,0.03,0.03"
                   AbsoluteLayout.LayoutFlags="All" />

            <!-- Нос-морковка -->
            <Frame BackgroundColor="#FF7F24"
                   CornerRadius="3" HasShadow="False"
                   AbsoluteLayout.LayoutBounds="0.50,0.305,0.10,0.022"
                   AbsoluteLayout.LayoutFlags="All" />

            <!-- Шарф -->
            <Frame x:Name="Scarf"
                   BackgroundColor="#E74C3C"
                   CornerRadius="6" HasShadow="False"
                   AbsoluteLayout.LayoutBounds="0.50,0.41,0.40,0.05"
                   AbsoluteLayout.LayoutFlags="All" />

            <!-- Тело -->
            <Frame x:Name="Body"
                   BackgroundColor="#FFFFFF"
                   BorderColor="#B0C4DE"
                   CornerRadius="999"
                   HasShadow="False"
                   AbsoluteLayout.LayoutBounds="0.50,0.72,0.50,0.48"
                   AbsoluteLayout.LayoutFlags="All" />

            <!-- Пуговицы -->
            <Frame CornerRadius="999" HasShadow="False" BackgroundColor="#222"
                   AbsoluteLayout.LayoutBounds="0.50,0.57,0.03,0.03"
                   AbsoluteLayout.LayoutFlags="All" />
            <Frame CornerRadius="999" HasShadow="False" BackgroundColor="#222"
                   AbsoluteLayout.LayoutBounds="0.50,0.68,0.03,0.03"
                   AbsoluteLayout.LayoutFlags="All" />
            <Frame CornerRadius="999" HasShadow="False" BackgroundColor="#222"
                   AbsoluteLayout.LayoutBounds="0.50,0.79,0.03,0.03"
                   AbsoluteLayout.LayoutFlags="All" />
        </AbsoluteLayout>

        <!-- 4) ПАНЕЛЬ УПРАВЛЕНИЯ (компактная), снизу на всю ширину -->
        <Frame HasShadow="True"
               Padding="12"
               CornerRadius="16"
               BackgroundColor="White"
               AbsoluteLayout.LayoutBounds="0.5,1,1,0.34"
               AbsoluteLayout.LayoutFlags="All">
            <ScrollView>
                <VerticalStackLayout Spacing="6">

                    <Label x:Name="StatusLabel"
                           Text="Выберите действие и нажмите кнопку"
                           FontSize="16" TextColor="Black" />

                    <Picker x:Name="ActionPicker" Title="Действие">
                        <Picker.Items>
                            <x:String>Спрятать</x:String>
                            <x:String>Показать</x:String>
                            <x:String>Сменить цвет</x:String>
                            <x:String>Растопить</x:String>
                            <x:String>Танцевать</x:String>
                        </Picker.Items>
                    </Picker>

                    <Button Text="Выполнить"
                            BackgroundColor="#C8C878"
                            TextColor="Black"
                            CornerRadius="12"
                            Clicked="DoButton_Clicked" />

                    <Label Text="Прозрачность" FontSize="14" TextColor="Black" />
                    <Slider x:Name="OpacitySlider"
                            Minimum="0" Maximum="1" Value="1"
                            ValueChanged="OpacitySlider_ValueChanged" />

                    <!-- Скорость анимаций с отображением значения -->
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto">
                        <Label Text="Скорость анимаций (мс)" FontSize="14" TextColor="Black" />
                        <Label x:Name="SpeedValueLabel"
                               Grid.Column="1"
                               HorizontalTextAlignment="End"
                               FontSize="14" Text="600 мс" />
                    </Grid>
                    <Stepper x:Name="SpeedStepper"
                             Minimum="100" Maximum="2000" Increment="100" Value="600"
                             ValueChanged="SpeedStepper_ValueChanged" />
                </VerticalStackLayout>
            </ScrollView>
        </Frame>
    </AbsoluteLayout>
</ContentPage>
